<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IceFisher" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/deep_blue</item>
        <item name="android:navigationBarColor">@color/deep_blue</item>
        <item name="android:windowBackground">@color/deep_blue</item>
    </style>
    <style name="Theme.IceFisher.FullScreen" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
</resources>
